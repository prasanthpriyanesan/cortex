# Database Configuration (Neon cloud PostgreSQL)
# Get your connection string from https://neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stock API Keys (Choose one or multiple)
# Finnhub (Recommended for beginners - Free tier: 60 calls/min)
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage (Free tier: 5 calls/min, 500/day)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (Free tier: Limited real-time)
# POLYGON_API_KEY=your_polygon_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Twilio Configuration (Optional - for SMS notifications)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
API_V1_PREFIX=/api/v1

# Background Tasks
ALERT_CHECK_INTERVAL=60  # seconds
MAX_ALERTS_PER_USER=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
